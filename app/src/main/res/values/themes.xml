<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjetWS" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/lighter_red</item>
        <item name="colorTertiary">@color/black</item>
        <item name="colorSecondary">@color/pizza_title_light</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <item name="android:statusBarColor">@color/lighter_red</item>
    </style>

    <style name="Theme.ProjetWS" parent="Base.Theme.ProjetWS" />

    <style name="text">
        <item name="android:textSize">17dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/lighter_red</item>
    </style>
    <style name="input">
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="Theme.etudiant.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/lighter_red</item>
    </style>

    <style name="RoundedSearchBar" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="shapeAppearanceOverlay">@style/RoundedCorner50Percent</item>
    </style>

    <style name="RoundedCorner50Percent">
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

</resources>